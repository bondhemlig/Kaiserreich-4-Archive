////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
// Settings file used to enforce team wide VSC settings; any change you make here will be applied to the rest of the team //
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

{

/////////
// VSC //
/////////

    // Sets the file browser to not follow open files
    "explorer.autoReveal": false,

/////////////
// CWTools //
/////////////

	// Increases the file size to 10mb, enabling support for our minister files
    "cwtools.maxFileSize": 10,

	// Ignoring errors from certain files
    "cwtools.errors.ignorefiles": [

		/////////////////////////////////////
        // Here for the foreseeable future //
		/////////////////////////////////////

		// It's the readme
        "Readme.txt",

		// ~mw~'s name is so funky it breaks things
        "credits.txt",

		// Since we auto generate this file, there are a whole load of flags which are checked but never set
        "_Ministers_ideas.txt",

        // DLC files can only be validated if you own them, and since most people don't own the Axis Armor Pack, this is ignored to avoid problems
        "ATUP_tanks_KR_ITA_removed.gfx",

		//////////////////////////////////////////
        // Temporary until something gets fixed //
		//////////////////////////////////////////

		// Strange bug where it shows up errors that aren't errors and then vanish when you enter the file, issue report here: https://github.com/cwtools/cwtools-hoi4-config/issues/75
        "_peace_conference_scripted_triggers.txt",
        "China_alignment_graph.txt",

		// Broken until we get support for building based modifiers, issue report here: https://github.com/cwtools/cwtools-hoi4-config/issues/57
        "Left_Kuomintang_dynamic_modifiers.txt",

        // Broken until we get support for conditional localisation, issue report here: https://github.com/cwtools/cwtools-hoi4-config/issues/69
        "Sichuan.txt",
		
		// Broken until we get full dynamic flag support
		"Canada_KR.txt",
		"American_Civil_War.txt",
		"Canada.txt",
		"Russia.txt",
		"United_States_of_America.txt",
		
		// False positive due to NOR (Norway) vs. NOR (not-OR) mismatch
		"Netherlands.txt",

    ],

	// Ignoring certain error types
    "cwtools.errors.ignore": [

		//////////////////////////////////////////
        // Temporary until something gets fixed //
		//////////////////////////////////////////

		// Localisation key commands aren't supported, issue report here: https://github.com/cwtools/cwtools-hoi4-config/issues/65
        "CW226",
		
		// Ship name lists clogging up the warnings
        "CW242"

    ],

////////////////////////////////
// GitLens - Git Supercharged //
////////////////////////////////

    // Only shows document ownership at the top rather within files
    "gitlens.codeLens.scopes": [
        "document"
    ],

    // Sorts our tags from most recent to least recent
    "gitlens.sortTagsBy": "name:asc",

////////////////////////
// Code Spell Checker //
////////////////////////

	// Enforce British English dictionary
    "cSpell.language": "en-GB",

    // Ensures we are only checking between quotes
    "cSpell.includeRegExpList": [
        "\".*\""
    ],

    // Things we shouldn't check
    "cSpell.ignoreRegExpList": [
        "§.", // No colourisation commands
        "\\[[^\\]]*\\]", // Nothing in square brackets
        "£\\w*", // No icon commands
        "\\\\n" // No new lines
    ],

    // Expands the number of spelling errors that are shown at once
    "cSpell.maxDuplicateProblems": 10,
    "cSpell.maxNumberOfProblems": 10000,

