// Settings file used to enforce mod wide settings for CWTools, saves people having to configure it all manually

{

	// Increases the file size to 10mb, enabling support for our minister files
    "cwtools.maxFileSize": 10,

	// Ignoring errors from certain files
    "cwtools.errors.ignorefiles": [

		/////////////////////////////////////
        // Here for the foreseeable future //
		/////////////////////////////////////

		// It's the readme
        "Readme.txt",

		// ~mw~'s name is so funky it breaks things
        "credits.txt",
		
		// Since we auto generate this file, there are a whole load of flags which are checked but never set
        "_Ministers_ideas.txt",

		//////////////////////////////////////////
        // Temporary until something gets fixed //
		//////////////////////////////////////////

		// Strange bug where it shows up errors that aren't errors and then vanish when you enter the file
        "_peace_conference_scripted_triggers.txt",

		// Broken until we get support for building based modifiers, issue report here: https://github.com/cwtools/cwtools-hoi4-config/issues/62
        "CHI_dynamic_modifiers.txt",

        // Broken until we get support for conditional localisation, issue report here: https://github.com/cwtools/cwtools-hoi4-config/issues/69
        "Sichuan.txt",

        // Broken until we get support for tag aliases, issue report here: https://github.com/cwtools/cwtools-hoi4-config/issues/64
        "Federalist_China_decisions_categories.txt",
        "National_Protection_Alliance_decision_categories.txt",
        "Sichuan_decision_categories.txt",
        "Fengtian_decision_categories.txt",

		// Broken until we get support for DLC model validation, issue report here: https://github.com/cwtools/cwtools-hoi4-config/issues/41
        "z_generic_KR_vehicles.gfx",
        "z_units_KR_tanks_GER_DLC_clone.asset",
        "z_units_KR_tanks_SOV_DLC_clone.asset",
        "z_units_KR_tanks_USA_DLC_clone.asset",

        // Broken until we get support for scripted GUIs, issue report here: https://github.com/cwtools/cwtools-hoi4-config/issues/67
        "UI_scripted_localisation.txt",
        "_useful_scripted_triggers.txt",
        "World_News.txt",
        "United_States_of_America.txt",

    ],

	// Ignoring certain error types
    "cwtools.errors.ignore": [

		//////////////////////////////////////////
        // Temporary until something gets fixed //
		//////////////////////////////////////////

		// Localisation key commands aren't supported, issue report here: https://github.com/cwtools/cwtools-hoi4-config/issues/65
        "CW226"

    ]

}